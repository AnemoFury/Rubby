# .env.example - Copy to .env.local for local development

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/project_hub_development

# Redis
REDIS_URL=redis://localhost:6379/0

# Email
SMTP_ADDRESS=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# Rails
RAILS_ENV=development
RAILS_LOG_TO_STDOUT=true
RAILS_HOST=localhost:3000

# ActionCable
ACTION_CABLE_URL=ws://localhost:3000/cable

# Devise
DEVISE_SECRET_KEY=generate-with-bundle-exec-rake-secret
