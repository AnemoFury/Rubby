<div class="space-y-6">
  <div class="flex justify-between items-center">
    <h1 class="text-3xl font-bold"><%= @project.name %></h1>
    <div class="space-x-2">
      <%= link_to "Edit", edit_project_path(@project), class: "btn btn-secondary" %>
      <%= link_to "Archive", archive_project_path(@project), method: :patch, class: "btn btn-danger" %>
    </div>
  </div>

  <%= turbo_stream_from @project %>

  <div class="grid grid-cols-3 gap-6">
    <!-- TODO Column -->
    <div data-column="todo" class="space-y-4">
      <h2 class="text-xl font-semibold text-gray-700">To-Do</h2>
      <div class="bg-gray-50 rounded-lg p-4 min-h-96 task-column" data-status="todo">
        <%= render @project.tasks.todo, project: @project %>
      </div>
    </div>

    <!-- IN PROGRESS Column -->
    <div data-column="in_progress" class="space-y-4">
      <h2 class="text-xl font-semibold text-blue-700">In Progress</h2>
      <div class="bg-blue-50 rounded-lg p-4 min-h-96 task-column" data-status="in_progress">
        <%= render @project.tasks.in_progress, project: @project %>
      </div>
    </div>

    <!-- DONE Column -->
    <div data-column="done" class="space-y-4">
      <h2 class="text-xl font-semibold text-green-700">Done</h2>
      <div class="bg-green-50 rounded-lg p-4 min-h-96 task-column" data-status="done">
        <%= render @project.tasks.done, project: @project %>
      </div>
    </div>
  </div>

  <!-- Create New Task Form -->
  <div class="mt-8 bg-white p-6 rounded-lg shadow">
    <h3 class="text-lg font-semibold mb-4">Create New Task</h3>
    <%= form_with model: [@project, @task], local: true, class: "space-y-4" do |f| %>
      <div>
        <%= f.label :title %>
        <%= f.text_field :title, placeholder: "Task title", class: "w-full px-3 py-2 border rounded-lg" %>
      </div>
      <div>
        <%= f.label :description %>
        <%= f.text_area :description, placeholder: "Task description", class: "w-full px-3 py-2 border rounded-lg" %>
      </div>
      <div>
        <%= f.label :priority %>
        <%= f.select :priority, ["Low", "Medium", "High"], {}, class: "px-3 py-2 border rounded-lg" %>
      </div>
      <%= f.submit "Create Task", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>

<script type="module">
  import { Sortable } from "https://cdn.jsdelivr.net/npm/sortablejs@latest/Sortable.esm.js";

  const taskColumns = document.querySelectorAll(".task-column");
  
  taskColumns.forEach(column => {
    new Sortable(column, {
      group: "tasks",
      animation: 150,
      ghostClass: "opacity-50",
      onEnd(event) {
        const taskId = event.item.dataset.taskId;
        const newStatus = event.to.dataset.status;
        
        fetch(`/projects/<%= @project.id %>/tasks/${taskId}/move`, {
          method: "PATCH",
          headers: {
            "Content-Type": "application/json",
            "X-CSRF-Token": document.querySelector("[name='csrf-token']").content
          },
          body: JSON.stringify({ status: newStatus })
        });
      }
    });
  });
</script>
